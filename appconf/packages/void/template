# Template file for 'captain-ballard'
pkgname=captain-ballard
version=1.0.0
revision=1
build_style=cmake
hostmakedepends="pkg-config"
makedepends="gtk+3-devel sqlite-devel libappindicator-devel libgit2-devel"
short_desc="Git-aware app that protect your projects before too late"
maintainer="linarcx <linarcx@gmail.com>"
license="GPL-3.0-only"
homepage="https://github.com/LinArcX/captain-ballard"
distfiles="${homepage}/archive/${version}.tar.gz"
checksum=02fb3cc6e7af0e246848b74ca1749cffd1dd9fef73baef6cacd23d047b69a486

do_install() {
	vbin captain-ballard
	vinstall ./appconf/kindd.svg 644 usr/share/pixmaps
	vinstall ./appconf/kindd.desktop 644 usr/share/applications
}

